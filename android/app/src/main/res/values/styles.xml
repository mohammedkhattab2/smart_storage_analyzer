<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Minimal native splash - just solid color to prevent white flash before Flutter loads -->
    <!-- Edge-to-edge compliant: transparent system bars -->
    <style name="LaunchTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <!-- Use solid color matching Flutter splash to prevent flash -->
        <item name="android:windowBackground">@color/splash_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <!-- Edge-to-edge: enable drawing behind system bars -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <!-- Transparent system bars for edge-to-edge -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Disable native splash screen -->
        <item name="android:windowSplashScreenAnimatedIcon">@null</item>
        <item name="android:windowSplashScreenBackground">@color/splash_background</item>
    </style>
    
    <!-- Normal theme for running app - Edge-to-edge compliant -->
    <style name="NormalTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowBackground">@color/splash_background</item>
        <!-- Edge-to-edge: enable drawing behind system bars -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- Transparent system bars for edge-to-edge -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>
